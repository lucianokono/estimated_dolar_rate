# Configurações de ambiente
DATABASE_URL=postgresql://postgres:password@localhost:5432/dollar_estimation
REDIS_URL=redis://localhost:6379

# APIs brasileiras (não precisam de chaves)
# BCB_API_BASE=https://api.bcb.gov.br/dados/serie/bcdata.sgs
# B3_API_BASE=https://www2.bmf.com.br

# Configurações do modelo
MODEL_VERSION=v1.0
MODEL_RETRAIN_THRESHOLD=0.1
PREDICTION_CACHE_TTL=3600

# Configurações de NLP
MAX_TEXT_LENGTH=512
BATCH_SIZE=32
SENTIMENT_MODEL=neuralmind/bert-base-portuguese-cased

# Configurações de features
LOOKBACK_DAYS=30

# Configurações de treinamento
TRAIN_TEST_SPLIT=0.8
VALIDATION_SPLIT=0.2
CROSS_VALIDATION_FOLDS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/system.log
